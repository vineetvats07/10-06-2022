/******************************************************************************
Calculator program 
*******************************************************************************/
#include <stdio.h>
#include <conio.h>
#include <math.h>
int main()
{
    int res,a,b;
    float res1,x,y;
    printf("\n=====Calculator=====");
    printf("\n1.Addition");
    printf("\n2.Subraction");
    printf("\n3.Multiplication");
    printf("\n4.Division");
    printf("\n5.Remainder");
    printf("\n6.Square Root");
    printf("\n7.Power Of a number");
    printf("\n8.Cos Of a number");
    printf("\n9.Sin Of a number");
    int ch;
    printf("\nEnter your choice:");
    scanf("%d",&ch);
    switch(ch)
    {
    case 1:
    {
       printf("\nEnter two numbers:");
       scanf("%d %d",&a,&b);
       res=a+b;
       printf("\nThe result is:%d",res);
       break;
        
    }
    case 2:
    {
       printf("\nEnter two numbers:");
       scanf("%d %d",&a,&b);
       res=a-b;
       printf("\nThe result is:%d",res);
    break;
        
    }
    case 3:
    {
       printf("\nEnter two numbers:");
       scanf("%d %d",&a,&b);
       res=a*b;
       printf("\nThe result is:%d",res);
       break;
        
    }
    case 4:
    {
       printf("\nEnter two numbers:");
       scanf("%d %d",&x,&y);
       res1=x/y;
       printf("\nThe result is:%f",res1);
       break;
    }
    case 5:
    {
       printf("\nEnter two numbers to calculate remainder:");
       scanf("%d %d",&a,&b);
       res=a%b;
       printf("\nThe remainder is:%d",res);
       break;
    }
     case 6:
    {
       printf("\nEnter a number to calculate square root:");
       scanf("%d",&a);
       res=sqrt(a);
       printf("\nThe square root is:%d",res);
       break;
    }
    case 7:
    {
       printf("\nEnter a number to calculate power:");
       scanf("%d",&a);
       printf("\nEnter a power:");
       scanf("%d",&b);
       res=pow(a,b);
       printf("\nThe result is:%d",res);
       break; 
    }
    case 8:
    {
       printf("\nEnter a number to calculate cos:");
       scanf("%d",&a);
       res1=cos(a);
       printf("\nThe result is:%f",res1);
       break;   
    }
    case 9:
    {
       printf("\nEnter a number to calculate sin:");
       scanf("%d",&a);
       res1=fabs(sin(a));
       printf("\nThe result is:%f",res1);
       break;   
    }
    default:
    printf("\nInvalid Choice!!!");
}
    return 0;
}
