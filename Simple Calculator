/******************************************************************************
Calculator program 
*******************************************************************************/
#include <stdio.h>
#include <conio.h>
int main()
{
    int res,a,b;
    printf("\n=====Calculator=====");
    printf("\n1.Addition");
    printf("\n2.Subraction");
    printf("\n3.Multiplication");
    printf("\n4.Division");
    int ch;
    printf("\nEnter your choice");
    scanf("%d",&ch);
    switch(ch)
    {
    case 1:
    {
       printf("\nEnter two numbers");
       scanf("%d %d",&a,&b);
       res=a+b;
       printf("\nThe result is:%d",res);
       break;
        
    }
    case 2:
    {
       printf("\nEnter two numbers");
       scanf("%d %d",&a,&b);
       res=a-b;
       printf("\nThe result is:%d",res);
    break;
        
    }
    case 3:
    {
       printf("\nEnter two numbers");
       scanf("%d %d",&a,&b);
       res=a*b;
       printf("\nThe result is:%d",res);
       break;
        
    }
    case 4:
    {
       float res1,x,y;
       printf("\nEnter two numbers");
       scanf("%d %d",&x,&y);
       res1=x/y;
       printf("\nThe result is:%d",res1);
       break;
    }
    default:
    printf("\nInvalid Choice!!!");
}
    return 0;
}
